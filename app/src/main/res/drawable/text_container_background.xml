<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan bawah untuk bayangan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0033E1"/> <!-- Warna merah gelap untuk bayangan -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Lapisan tengah untuk garis -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0033E1"/> <!-- Warna merah utama -->
            <corners android:radius="16dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Warna garis -->
        </shape>
    </item>
    <!-- Lapisan atas untuk efek timbul -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#0033E1"/> <!-- Warna merah terang untuk efek timbul -->
            <corners android:radius="16dp"/>
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>
</layer-list>
